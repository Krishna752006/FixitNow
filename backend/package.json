{
  "name": "fixit-backend",
  "version": "1.0.0",
  "description": "Backend API for FixItNow platform",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/server.js",
    "start": "node start.js",
    "start:prod": "cross-env NODE_ENV=production node start.js",
    "start:direct": "cross-env NODE_ENV=production node src/server.js",
    "start:dev": "cross-env NODE_ENV=development node src/server.js",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.cjs",
    "cleanup:jobs": "node src/scripts/cleanupJobs.js",
    "migrate:reviews": "node src/scripts/migrateReviews.js",
    "update:pricing": "node src/scripts/updateJobPricing.js"
  },
  "keywords": [
    "fixit",
    "backend",
    "api",
    "mongodb",
    "express"
  ],
  "author": "FixItNow Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^10.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "razorpay": "^2.9.6"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
